<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imgEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Event image"
                android:background="#C1C1C1" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Event Name -->
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="#1A1A1A"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Event Description -->
                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event description"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Event Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="#5B4FC8"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvEventTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: TBD"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Event Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="#5B4FC8"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvEventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: TBD"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Max Participants -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="#5B4FC8"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvEventMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Participants: 0"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Registration info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_reg_status_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration: —"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:textAlignment="viewStart"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_reg_window_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opens: —  •  Closes: —"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <!-- Waiting-list total -->
                <TextView
                    android:id="@+id/tv_waiting_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Waiting List: —"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Entrants List Section (visible only for organizers) -->
        <TextView
            android:id="@+id/tvEntrantsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrants on Waiting List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollViewEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="8dp"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false">


        <TextView
                android:id="@+id/tvEntrantsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </ScrollView>

        <Button
            android:id="@+id/btnExportCsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export as CSV"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- QR code  -->
        <ImageView
            android:id="@+id/imgEventQr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Event QR"
            android:visibility="gone" />


        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
        <!-- Waiting List  -->
        <Button
            android:id="@+id/btnViewWaitingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="VIEW WAITING LIST"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#5B54FC"
            android:visibility="gone" />


        <!-- Join Waitlist Button -->
        <Button
            android:id="@+id/btnJoinWaitlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="Join Waitlist"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:backgroundTint="#5B4CF8"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />



        <!-- Run Lottery Button (organizers only) -->
        <Button
            android:id="@+id/btnRunLottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:text="Run Lottery"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Notify Selected Entrants Button (organizers only) -->
        <Button
            android:id="@+id/btnNotifySelectedEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF9800"
            android:text="Notify Selected Entrants"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Notify Not-Selected Entrants Button (organizers only) -->
        <Button
            android:id="@+id/btnNotifyNotSelectedEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9C27B0"
            android:text="Notify Not-Selected Entrants"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Notify All Waiting list Entrants (organizers only) -->
        <Button
            android:id="@+id/btnNotifyWaitingListEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5B4CF8"
            android:text="Notify Waiting List Entrants"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Entrant lottery status/ deadline lines -->
        <TextView
            android:id="@+id/tvLotteryStatusLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvLotteryDeadlineLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
